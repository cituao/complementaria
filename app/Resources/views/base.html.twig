<!DOCTYPE html>
<html>
	<head>
		<title>{% block title %}Login ::: Actividad complementaria UAO{% endblock %}</title>
		{% block stylesheets %} 
			<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
			<link rel="stylesheet" type="text/css" href="{{ asset('css/reset.css') }}" />
			<link rel="stylesheet" type="text/css" href="{{ asset('css/global.css') }}" />
			   <!-- <link rel="stylesheet" type="text/css" href="{{ asset('css/mainPanel.css') }}" />
			   <link href="{{ asset('css/comun.css') }}" rel="stylesheet" />-->
			   <link rel="agregar-participante" href="{{ asset('images/agregar_participante.png') }}" />
			   <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.js"></script> 
			   <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		{% endblock %}
   </head>

   <body>
      {% block body %} 	
			 <div id="mainHeader">
				<h2 style="float:left; margin-right:30px; margin-left:35px;">Actividad complementaria</h2>
				<h3 style="float:left;">Facultad de Ingeniería</h3>

				<div style="margin-top:-6px" id="cerrarSesionButton">
					<img style="float:left;" src="{{ asset('img/cerrarSesionButton.png') }}"/>
					<a href="{{ path('usuario_logout') }}" id="cerrarButtonLink">Cerrar Sesión </a>
				</div>
			</div><!-- mainHeader -->

			<div id="secondHeader">
			   <h3 style="margin-left:15px" >{%block programa %} {% endblock programa %}</h3>
		    </div><!-- secondHeader -->

		   <div id="sideBar">
				<h1 id="userName"> {{ app.user.username }}</h1>
				<h2 id="userRole">{% if is_granted('ROLE_DIRECTOR') %} Director{% endif %}
					{% if is_granted('ROLE_PROFESOR') %} Profesor{% endif %}
					{% if is_granted('ROLE_ESTUDIANTE') %} Estudiante{% endif %}
					{% if is_granted('ROLE_ADMIN') %} Administrador{% endif %}
				</h2> {% block foto %} {% endblock %}
				<div id="imgContainer">
				 {% if is_granted('ROLE_PROFESOR') %}<img  width="100%" src="{{ asset('img/defaultPicture.png') }}" onerror="this.src='{{ asset('uploads/fotos/defaultPicture.png') }}'"/>{% endif %}
				 {% if is_granted('ROLE_DIRECTOR') %}<img  width="100%" src="{{ asset('img/defaultPicture.png') }}" onerror="this.src='{{ asset('uploads/fotos/defaultPicture.png') }}'"/>{% endif %}
				 {% if is_granted('ROLE_ESTUDIANTE') %} <img  width="100%" src="{{ asset('img/defaultPicture.png') }}" onerror="this.src='{{ asset('uploads/fotos/defaultPicture.png') }}'"/>{% endif %}
				{% if is_granted('ROLE_ADMIN') %} <img  width="100%" src="{{ asset('img/defaultPicture.png') }}" onerror="this.src='{{ asset('uploads/fotos/defaultPicture.png') }}'"/> {% endif %}
				</div>

				{% block sideBarMenu %} 
				{% endblock %}
			</div><!-- sideBar -->
			
			
		{% block content %} 
		{% endblock %}
	{% endblock %}
	{% block js %}
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js"></script>
	{% endblock %}
</body>

</html>
