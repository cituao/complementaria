{% extends 'IngenieriaDirectorBundle::layout.html.twig' %}

{% block programa %}
Direcci√≥n
{% endblock %}

{% block js  %}
<script>
$( "#asesoresExternos" ).css("background-color","#000");
$( "#asesoresExternos img" ).css("opacity","0.4");
$( "#asesoresExternos h3" ).css("opacity","0.4");
</script>

{% endblock %}



{% block content  %}
{{ parent() }}
	<div class="content">
		{% block upSection  %}
		<div class = "upSection">
			<h1 class ="sectionTitle">Profesores</h1>
			<a href="{{ path('ingenieria_director_registrarprofesor') }}"  class = "button"><img src="{{ asset('img/externosBoton.png') }}"/><h4>Nuevo profesor</h4></a>
		</div>
		{% endblock  %}

		{% block downSection  %}
		<div class = "downSection">

		{% if msgerr.id == '1' %}
			<div id = "error">{{ msgerr.descripcion }}</div>		
		{% else %}
			
			<table class = "generalTableHead">
				<tbody>
					<tr class="tableHead">
						<th style=" width:15%"></th> 
						<th style=" width:15%"></th> 
						<th></th> 
						<th style=" width:10%"><img src="{{ asset('img/idLabel.png') }}"/></th> 
						<th><h3><span>Centro</span></h3></th>
						<th><img src="{{ asset('img/mailLabel.png') }}"/></th>
						<th><img src="{{ asset('img/telefonoLabel.png') }}"/></th>
						<th></th>
						<th></th>
						
					</tr> <!--tablehead -->
				</tbody>
			</table><!-- practicantes tableHead -->

			<div style="width: 100%; height: 750px; overflow: auto; position:relative; padding-bottom:30px;">
		
				<table class = "generalTable">
				<tbody>
			
					{% set id = 1 %}
					<tr class="spacer"></tr>
					{% for profesor in listaProfesores %}
					<tr class="tableItem">
						<td id="hoverDiv">
						
							<td><h2>{{ id }}</h2></td>
							
							<td style=" width:15%"><span style="margin-left:20px; ">{{ profesor.nombres }}</span></td>
							<td style=" width:12%"><span>{{ profesor.apellidos }}</span></td>
							<td style=" width:8%">{{ profesor.ci }}</td>
							<td></td>
							<td></td>
							<td style=" width:8%"></td>
							<td style=" width:8%"> {{ profesor.emailInstitucional }}</td>
							<td style=" width:8%"></td>
							<td>{{ profesor.email }}</td>

							<td>
								<table class="opciones" style="right:129px">
									<td>
									<a href="{{ path('ingenieria_director_profesor' , { 'ci': profesor.ci}) }}"><img src="{{ asset('img/editar.png') }}" ><h3> Editar </h3></a>
									</td>
								</table>
							</td>

						</td> <!-- hoverDiv -->

					</tr>
					{% set id = id + 1 %}
					<tr class="spacer"></tr>
					{% endfor %}
					<tr class="spacer"></tr>
					<tr class="spacer"></tr>
					<tr class="spacer"></tr>
					<tr class="spacer"></tr>
					<tr class="spacer"></tr>
				</tbody>
				</table><!-- generalTable -->
			</div><!-- scrollDiv -->
			</div><!-- downSection -->
		{% endif %}
		{% endblock %}

</div>

<script>
$( ".tableItem" ).mouseenter(function() {
		var opciones = $('.opciones', this);
		var itemPicture = $('.itemImgContainer', this);
		$(itemPicture).css("border-color","#ec1c24");

		$( opciones).animate({
			opacity: 1,
			top: "-30px",
		}, 300, function() {
	    // Animation complete.
	});
	});

	$( ".tableItem" ).mouseleave(function() {
		var itemPicture = $('.itemImgContainer', this);
		var opciones = $('.opciones', this);
		$(itemPicture).css("border-color","#242021");
		$( opciones).animate({
			opacity: 0,
			top: "0px",
		}, 300, function() {
	    // Animation complete.
	});
	});
</script>
{% endblock %}

