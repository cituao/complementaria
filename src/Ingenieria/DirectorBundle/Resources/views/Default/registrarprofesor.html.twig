{% extends 'IngenieriaDirectorBundle::layout.html.twig' %}

{% block programa %}
Aplicaci√≥n WEB - [Director]
{% endblock %}

{% block js  %}
<script>
$( "#asesoresExternos" ).css("background-color","#000");
$( "#asesoresExternos img" ).css("opacity","0.4");
$( "#asesoresExternos h3" ).css("opacity","0.4");
</script>

{% endblock %}

{% block content  %}
{{ parent() }}
<div class="content">
	{% block upSection  %}
	<div class="upSection">
		<h1 class ="sectionTitle">Nuevo profesor</h1>
		
		<a href= "{{ path('ingenieria_director_homepage') }}" class = "button"><img src="{{ asset('img/regresar.png') }}"/><h4>Regresar</h4></a>
	</div>
	{% endblock  %}

	{% block downSection  %}
	<div class="downSection">
		<div class="profileContainer">
			<div class="profileFormContainer">
				<form action="{{ path('ingenieria_director_registrarprofesor') }}" method="post" {{ form_enctype(formulario) }}>
					<div>	{{ form_errors(formulario) }}	</div>

					

					<div class="inputContainer">
						<h2>{{ form_label(formulario.nombres) }}</h2>
						<div class="input"> 
							{{ form_errors(formulario.nombres) }}
							{{ form_widget(formulario.nombres, {'attr': {'class':'mediano'}} ) }}
						</div>
					</div>

					<div class="inputContainer">
						<h2>{{ form_label(formulario.apellidos) }}</h2>
						<div class="input"> 
							{{ form_errors(formulario.apellidos) }}
							{{ form_widget(formulario.apellidos, {'attr': {'class':'mediano'}} ) }}
						</div>
					</div>

					<div class="inputContainer">
						<h2>{{ form_label(formulario.ci) }}</h2>
						<div class="input"> 
							{{ form_errors(formulario.ci) }}
							{{ form_widget(formulario.ci, {'attr': {'class':'corto'}} ) }}
						</div>
					</div>
					
					<div class="inputContainer">
						<h2>{{ form_label(formulario.email) }}</h2>
						<div class="input"> 
							{{ form_errors(formulario.email) }}
							{{ form_widget(formulario.email, {'attr': {'class':'largo'}} ) }}
						</div>
					</div>

					<div class="inputContainer">
						<h2>{{ form_label(formulario.emailInstitucional) }}</h2>
						<div class="input"> 
							{{ form_errors(formulario.emailInstitucional) }}
							{{ form_widget(formulario.emailInstitucional, {'attr': {'class':'largo'}} ) }}
						</div>
					</div>

					{{ form_rest(formulario) }}
					
				<div class="inputContainer" style="position:relative; margin-top:20px; margin-left:20px;">
						<img style="position:absolute; left:15px; float:left; pointer-events:none;" src="{{ asset('img/guardar.png') }}" />
						<input style="padding-left:40px;" class="button"  type="submit" value="Guardar" />
					</div>
				</form>	
			</div><!-- profileFormCont -->
		</div><!-- profileCont -->
	</div><!-- downSection -->
	{% endblock  %}
</div><!-- content -->
{% endblock %}
