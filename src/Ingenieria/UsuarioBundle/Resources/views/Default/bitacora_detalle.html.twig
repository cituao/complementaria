{% extends 'IngenieriaUsuarioBundle::layout.html.twig' %}

{% block programa %}
App WEB  [Administrador]
{% endblock %}

{% block js  %}
	<link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
	<script src="//code.jquery.com/jquery-1.9.1.js"></script>
	<script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
	<script src="{{ asset('js/date_picker.js') }}"></script>
{% endblock %}

{% block content  %}
{{ parent() }}
	<div class="content">
		{% block upSection  %}

		<div class="upSection">
			<h1 class="sectionTitle">Actividad</h1>
			<a href="javascript:history.back()" class = "button"><img src="{{ asset('img/regresar.png') }}"/><h4>Regresar</h4></a>
		</div><!-- upSection -->
		{% endblock  %}
	
	{% block downSection  %}
	<div class="downSection" style="padding:30px">
		<div class="inform" style="height:500px;">
			<form action="{{ path('ingenieria_estudiante_actualizar_actividad_semanal', { 'id': actividad.id}) }}" method="post" {{ form_enctype(formulario) }}>
				<div>{{ form_errors(formulario) }}</div>

				<div class="profileFormContainer">

					<div class="inputContainer" style="width:800px;">	
						<h2>{{ form_label(formulario.nombreActividad) }}</h2>
						<div class="input"> 
							{{ form_widget(formulario.nombreActividad, {'attr': {'class':'mediano'}} ) }}
							{{ form_errors(formulario.nombreActividad) }}
						</div>
					</div>
					
					<div class="inputContainer" style="width:450px;">	
						<h2>{{ form_label(formulario.descripcion) }}</h2>
						<div class="input"> 
							{{ form_widget(formulario.descripcion, {'attr': {'class':'mediano'}} ) }}
							{{ form_errors(formulario.descripcion) }}
						</div>
					</div>
					
				<div class="inputContainer">
					<h2>{{ form_label(formulario.fechaInicio) }}</h2>
					<div class="input"> 
					{{ form_widget(formulario.fechaInicio, {'attr': {'class':'corto'}} ) }}
					{{ form_errors(formulario.fechaInicio) }}
					</div>
				</div>
				
				<div class="inputContainer">
					<h2>{{ form_label(formulario.fechaFin) }}</h2>
					<div class="input"> 
					{{ form_widget(formulario.fechaFin, {'attr': {'class':'corto'}} ) }}
					{{ form_errors(formulario.fechaFin) }}
					</div>
				</div>

					<div class="inputContainer">	
						<h2>{{ form_label(formulario.finalizada) }}</h2>
						<div class="input">
							{{ form_widget(formulario.finalizada, {'attr': {'class':'corto'}} ) }}
							{{ form_errors(formulario.finalizada) }}
						</div>
					</div>

					<div class="inputContainer" style="margin-top:20px; margin-left:-10px; width:auto !important">

					</div>
				</div><!--profileForContainer -->
				{{ form_rest(formulario) }}
			</form>
		</div><!-- profileContainer -->
		{% endblock  %}
	</div><!--downsection -->
	</div> <!-- cierra content -->
{% endblock %}
