{% extends 'IngenieriaEstudianteBundle::layout.html.twig' %}

{% block programa %}
Aplicaci√≥n WEB  [Estudiante]
{% endblock %}

{% block js  %}
<script>
	$( "#encuentros" ).css("background-color","#000");
	$( "#encuentros img" ).css("opacity","0.4");
	$( "#encuentros h3" ).css("opacity","0.4");
</script>
{% endblock %}

{% block content  %}
{{ parent() }}

<div class="content">
	{% block upSection  %}
	<div class = "upSection" style="height:60px;">
		<h1 class ="sectionTitle">Encuentros presenciales {{ estudiante.subgrupo.nombre }}</h1>
	</div> <!-- up section -->
	{% endblock  %}

	{% block downSection  %}
	<div class = "downSection"> 
		<table class = "tabla" id = "tabla">
			<tr class="tableHeader">
				<th>Fecha</th>
				<th>Resumen</th>
				<th> </th>
				<th>Observaciones</th>
				<th> </th>
			</tr>
			<tr style="height:8px;"></tr>
			{% for e in encuentros %}
			<tr>
				<td style="width: 5px; padding:5px;">{{ e.fecha|date("d/m/Y") }}</td>
				<td style="width: 300px; padding:15px;">{{ e.resumen }}</td>
				<td style="width: 5px;">  </td>
				<td style="width: 200px; padding:15px;">{{ e.observaciones }}</td>
				<td style="width: 10px;">  </td>
			</tr>
			{% endfor %}
		</table>
	
		{% if encuentros.count == 0 %}
		<div id = "error"><img src="/complementaria/web/img/error.png"/>{{ msgerr.descripcion }}</div>	
		{% endif %}
	</div>	<!-- down section -->
	{% endblock  %}
</div><!-- content -->
{% endblock %}