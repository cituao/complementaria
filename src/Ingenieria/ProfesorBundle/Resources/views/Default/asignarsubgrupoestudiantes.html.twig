{% extends 'IngenieriaProfesorBundle::layout.html.twig' %}

{% block programa %}
App WEB  [Tutor]
{% endblock %}

{% block js  %}
<script>  /*Deja activo la sesion Practicantes en la menu sidebar*/
$( "#cursos" ).css("background-color","#000");
$( "#cursos img" ).css("opacity","0.4");
$( "#cursos h3" ).css("opacity","0.4");
</script>

{% endblock %}


{% block content  %}
{{ parent() }}
	<div class="content">
		{% block upSection  %}
	<div class="upSection">
			<h1 class="sectionTitle">Asignar colectivo a estudiante</h1>
			<a href="{{ path('ingenieria_profesor_estudiantes_singrupos' , { 'id': estudiante.grupo.id }) }}" class = "button"><img src="{{ asset('img/regresar.png') }}"/><h4>Regresar</h4></a>
		</div>
		{% endblock  %}
		{% block downSection  %}
		<div class="downSection">
		<div class="profileContainer">
		
		<form action="{{ path('ingenieria_profesor_asignar_subgrupo' , { 'id': estudiante.id}) }}" method="post" {{ form_enctype(formulario) }}>
			<div>{{ form_errors(formulario) }}</div>	

			<div class="profileFormContainer">
				<div class="inputContainer">		
				<h2>{{ form_label(formulario.nombres) }}</h2>
				<div class="input">
				{{ form_widget(formulario.nombres, {'attr': {'class':'mediano'}} ) }}
				{{ form_errors(formulario.nombres) }}
				</div>
			</div>
			
				<div class="inputContainer">		
				<h2>{{ form_label(formulario.apellidos) }}</h2>
				<div class="input">
				{{ form_widget(formulario.apellidos, {'attr': {'class':'mediano'}} ) }}
				{{ form_errors(formulario.apellidos) }}
				</div>
			</div>

			<div class="inputContainer">	
				<h2>{{ form_label(formulario.ci) }}</h2>
				<div class="input"> 
				{{ form_widget(formulario.ci, {'attr': {'class':'corto'}} ) }}
				{{ form_errors(formulario.ci) }}
				</div>
			</div>

				<div class="inputContainer">		
				<h2>{{ form_label(formulario.codigo) }}</h2>
				<div class="input">
				{{ form_widget(formulario.codigo, {'attr': {'class':'corto'}} ) }}
				{{ form_errors(formulario.codigo) }}
				</div>
			</div>

			<div class="inputContainer">		
				<h2>{{ form_label(formulario.email) }}</h2>
				<div class="input">
				{{ form_widget(formulario.email, {'attr': {'class':'mediano'}} ) }}
				{{ form_errors(formulario.email) }}
				</div>
			</div>
			
			<div class="inputContainer">		
				<h2>{{ form_label(formulario.subgrupo) }}</h2>
				<div class="input">
				{{ form_widget(formulario.subgrupo, {'attr': {'class':'mediano'}} ) }}
				{{ form_errors(formulario.subgrupo) }}
				</div>
			</div>
			
			{{ form_rest(formulario) }}			
			<div class="inputContainer" style="position:relative; margin-top:20px;">

						<img style="position:absolute; left:15px; float:left; pointer-events:none;" src="{{ asset('img/guardar.png') }}" />
				<input style="padding-left:40px;" class="button" type="submit" value="Guardar cambios" />

			</div>
		</form>
	</div> <!-- profileFormContainer -->
	</div> <!-- profileContainer -->
	</div><!---downSection -->
		{% endblock %} <!-- downsection -->
	</div>
{% endblock %}

