{% extends 'IngenieriaProfesorBundle::layout.html.twig' %}

{% block programa %}
Aplicaci√≥n WEB  [Tutor]
{% endblock %}

{% block js  %}
<script>
	$( "#bitacora" ).css("background-color","#000");
	$( "#bitacora img" ).css("opacity","0.4");
	$( "#bitacora h3" ).css("opacity","0.4");
</script>
{% endblock %}

{% block content  %}
{{ parent() }}

<div class="content">
	{% block upSection  %}
	<div class = "upSection" style="height:60px;">
		<h1 class ="sectionTitle">Encuentros del {{ subgrupo.nombre }}</h1>
		<a href="{{ path('ingenieria_profesor_registrar_encuentro', { 'id': subgrupo.id}) }}" class = "button"><img src="{{ asset('img/numeroVacantes.png') }}"/><h4>Nuevo encuentro</h4></a>
		<a href="{{ path('ingenieria_ver_subgrupos', { 'id': subgrupo.grupo.id}) }}" class = "button"><img src="{{ asset('img/regresar.png') }}"/><h4>Regresar</h4></a>
	</div> <!-- up section -->
	{% endblock  %}

	{% block downSection  %}
			{% if msgerr.id == '1' %}
				<div id = "error"><img src="/complementaria/web/img/error.png"/>{{ msgerr.descripcion }}</div>		
			{% else %}
				<div class = "downSection"> 
					<table class = "tabla" id = "tabla">
						<tr class="tableHeader">
							<th>Fecha</th>
						</tr>
						<tr style="height:8px;"></tr>
						{% for e in encuentros %}
						<tr>
							<td  class = "colFecha"><a href="{{ path('ingenieria_profesor_actualizar_encuentro', { 'id': e.id}) }}"/>{{ e.fecha|date("d/m/Y") }}</a></td>
						</tr>
						{% endfor %}
					</table>
			{% endif %}
				</div>	<!-- down section -->
			
	{% endblock  %}
</div><!-- content -->
{% endblock %}
