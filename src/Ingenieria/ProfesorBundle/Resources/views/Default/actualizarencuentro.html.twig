{% extends 'IngenieriaProfesorBundle::layout.html.twig' %}

{% block programa %}
App WEB  [Tutor]
{% endblock %}

{% block js  %}
	<link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
	<script src="//code.jquery.com/jquery-1.9.1.js"></script>
	<script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
	<script src="{{ asset('js/date_picker.js') }}"></script>
{% endblock %}

{% block content  %}
{{ parent() }}
	<div class="content">
		{% block upSection  %}
		<div class="upSection">
			<h1 class="sectionTitle">Actualizar encuentro presencial</h1>
		
			<a href="{{ path('ingenieria_profesor_ver_encuentros', { 'id': encuentro.subgrupo.id}) }}" class = "button"><img src="{{ asset('img/regresar.png') }}"/><h4>Regresar</h4></a>
			
		</div><!-- upSection -->
		{% endblock  %}
	
	{% block downSection  %}
	<div class="downSection" style="padding:30px">
		<div class="inform" style="height:500px;">
			<form action="{{ path('ingenieria_profesor_actualizar_encuentro' , { 'id': encuentro.id} ) }}" method="post" {{ form_enctype(formulario) }}>
				<div>{{ form_errors(formulario) }}</div>

				<div class="profileFormContainer">

					<div class="inputContainer" style="width:600px;">	
						<h2>{{ form_label(formulario.fecha) }}</h2>
						<div class="input"> 
							{{ form_widget(formulario.fecha, {'attr': {'class':'mediano'}} ) }}
							{{ form_errors(formulario.fecha) }}
						</div>
					</div>
			
					<div class="inputContainer" style="width:600px;">	
						<h2>{{ form_label(formulario.resumen) }}</h2>
						<div class="input"> 
							{{ form_widget(formulario.resumen, {'attr': {'class':'mediano'}} ) }}
							{{ form_errors(formulario.resumen) }}
						</div>
					</div>

					<div class="inputContainer" style="width:600px;">	
						<h2>{{ form_label(formulario.observaciones) }}</h2>
						<div class="input"> 
							{{ form_widget(formulario.observaciones, {'attr': {'class':'mediano'}} ) }}
							{{ form_errors(formulario.observaciones) }}
						</div>
					</div>
					
					<div class="inputContainer" style="margin-top:20px; margin-left:-10px; width:auto !important">
						<div style="position:relative; float:right">
						<img style="position:absolute; left:15px; float:left; pointer-events:none;" src="{{ asset('img/guardar.png') }}" />
						<input style="padding-left:38px" class="button" type="submit" value="Guardar" />
						</div>
					</div>

					
				</div><!--profileForContainer -->
				{{ form_rest(formulario) }}
			</form>
		</div><!-- profileContainer -->
		{% endblock  %}
	</div><!--downsection -->
	</div> <!-- cierra content -->
{% endblock %}
